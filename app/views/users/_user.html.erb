<% if current_user.admin? && !user.admin? %>
  <tr style="border-bottom:solid 1px #E8E8E8;">
    <td style="width: 20%"><%= link_to user.name, user_path(user) %></td>
    <td style="width: 20%"><%= user.email %></td>
    <td  style="float:right; width: 60%"><%= render "shared/block_form", user: user %>
    <%= render "shared/mod_form", user: user %></td>
  </tr>
<% end %>
